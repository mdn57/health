<?xml version="1.0"?>
<form>
    <group string="Server information">
        <group string="General" yfill="1">
            <label name="label"/>
            <field name="label"/>
            <label name="domain"/>
            <field name="domain"/>
            <label name="sync_time"/>
            <field name="sync_time"/>
            <label name="since_sync_readable"/>
            <field name="since_sync_readable"/>
            <label name="last"/>
            <field name="last"/>
        </group>
        <group string="User" yfill="1">
            <label name="user"/>
            <field name="user"/>
            <label name="password"/>
            <field name="password"/>
        </group>
    </group>
    <newline/>
    <button name="do_sync" help="Synchronize from Orthanc server" string="Sync" icon="gnuhealth-execute" confirm="Synchronize?"/>
    <newline/>
    <button name="do_full_sync" help="Fully synchronize from Orthanc server" string="Full sync" icon="gnuhealth-execute" confirm="Synchronize?"/>
</form>
